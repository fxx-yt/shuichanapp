<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/shipin7_logo_lyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/water_firstpage"
        >
    </ImageView>

    <EditText
        android:id="@+id/et_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shipin7_logo_lyt"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_circle_edittextup"
        android:hint="请输入用户名"
        android:padding="10dp"
        android:textSize="15sp"
        />
    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/et_user"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="#DEDFE1"
        />
    <EditText
        android:id="@+id/et_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/v_line"
        android:background="@drawable/login_circle_edittextdown"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="请输入密码"
        android:password="true"
        android:padding="10dp"
        android:textSize="15sp"
        />

    <RelativeLayout
        android:id="@+id/rl_cb"
        android:layout_below="@+id/et_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <CheckBox
            android:id="@+id/cb_rem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:text="记住密码"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/web_login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/interface_call_btn_selector"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="@dimen/login_text_size"
        android:layout_below="@id/rl_cb"
        android:onClick="onClick"
        />
</RelativeLayout>